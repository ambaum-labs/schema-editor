name: schema-editor-production-build

on:
  workflow_dispatch
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-node@v3
        with:
          node-version: 16
      - run: npm ci
      - run: NODE_ENV=production npx tailwindcss -o src/assets/tailwind.css --minify
      - run: npm run build
